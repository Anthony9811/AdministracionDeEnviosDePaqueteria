@model AdministracionDeEnviosDePaqueteria.Model.Paquetes

@{
    ViewData["Title"] = "Agregar";
}

<h1>Agregar Nuevo Paquete</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Agregar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NombrePersonaEnvia" class="control-label"></label>
                <input asp-for="NombrePersonaEnvia" class="form-control" />
                <span asp-validation-for="NombrePersonaEnvia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NombrePersonaRecibe" class="control-label"></label>
                <input asp-for="NombrePersonaRecibe" class="form-control" />
                <span asp-validation-for="NombrePersonaRecibe" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DirrecionEnvio" class="control-label"></label>
                <input asp-for="DirrecionEnvio" class="form-control" />
                <span asp-validation-for="DirrecionEnvio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Agregar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Listar">Volver A La Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
