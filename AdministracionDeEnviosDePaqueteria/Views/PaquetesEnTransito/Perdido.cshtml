@model AdministracionDeEnviosDePaqueteria.Model.PaquetePerdido

@{
    ViewData["Title"] = "Perdido";
}

<h1>Declarar Como Perdido</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Perdido">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MotivoPerdida" class="control-label"></label>
                <input asp-for="MotivoPerdida" class="form-control" />
                <span asp-validation-for="MotivoPerdida" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Listar">Volver A La Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
